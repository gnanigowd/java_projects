package mentor_questions;

import java.util.Scanner;

public class eee {


    
		public static void main(String[] args){
			int num = 3;
		    for (int i = 1; i<=10;i++) {
		    	if (i%3==0) {
		    	System.out.println(3 * i + " ="  + "*" +num);
		    	}else {
		    		System.out.println();
		    
		    }
		    }
		}
}
		
		    	
		    

		  