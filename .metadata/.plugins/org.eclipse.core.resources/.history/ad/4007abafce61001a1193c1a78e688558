package mentor_questions;

import java.util.Scanner;

public class Odd_Even_Positive_Negative {

	public static void main(String[] args) {
		int postive = 0;
		int negative = 0;
		int odd = 0;
		int even = 0;
		Scanner sc = new Scanner(System.in);
		System.out.println("enter any number");
		int[] j = new int[20];
		for (int i = 0; i < j.length; i++) {
			System.out.println();
			j[i] = sc.nextInt();
			postive = j[i];
			negative = j[i];
			odd = j[i];
			if (j[i] > 0) {
				j[i]++;
				System.out.println(j[postive] + " are positive numbers");

			} else if (j[i] < 0) {
				negative++;
				System.out.println(" are negative numbers");
			}
		}

		if (even % 2 == 0) {
			System.out.println(j[even] + " are even numbers");
		} else {
			System.out.println(" are odd numbers");
		}
	}
}
