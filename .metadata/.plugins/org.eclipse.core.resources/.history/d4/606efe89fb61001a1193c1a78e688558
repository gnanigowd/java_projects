package mentor_questions;

import java.util.Scanner;

public class Odd_Even_Positive_Negative {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[] j = new int[20];
		int postive = 0;
		int negative = 0;
		int odd = 0;
		int even = 0;
		int zero = 0;
		for (int i = 0; i < j.length; i++) {
			System.out.println();
			j[i] = sc.nextInt();
			if (j[i] > 0) {
				postive= postive +1;
			
			 } else if
			(j[i] < 0) {
		negative=negative+1;
			   }else {		
		if (j[even] % 2 == 0) {
			even=even+j[even];
		} else 
			if (j[odd] % 2==1){
			odd=odd+j[even];
			  }else {	
					zero=zero+1;
			}
		}
		System.out.println(j[postive] + " count of  positive numbers");
		System.out.println(j[negative] + " count of negative numbers");
		System.out.println(j[even] + " count of even numbers");
		System.out.println(j[odd] + " count of  odd numbers ");
		System.out.println(j[zero] + " count of zeros");
}
	}
}

