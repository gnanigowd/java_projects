package mentor_questions;

import java.util.Scanner;

public class Odd_Even_Positive_Negative {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[] j = new int[8];
		int postive = 0;
		int negative = 0;
		int odd = 0;
		int even = 0;
		int zero = 0;
		for (int i = 0; i < j.length; i++) {
			j[i] = sc.nextInt();
			System.out.println();
			if (j[i] > 0) {
				postive = postive + 1;
				postive = postive + 1;
			} else if (j[i] < 0) {
				negative = negative + 1;

				if (j[i] % 2 == 0) {
					even = even + j[even];
					

				} else
					odd = odd + j[i];
				odd = odd + j[i];
			} else {
				zero = (j[zero] = 0);

			}

		}
		
		System.out.println(j[postive] + " count of  positive numbers");
		System.out.println(j[negative] + " count of negative numbers");
		System.out.println(even + "count of even numbers");
		System.out.println(j[odd] + " count of  odd numbers ");
		System.out.println(j[zero] + " count of zeros");
	}
}
