package mentor_questions;

import java.util.Scanner;

public class Meal_week {

	public static void main(String[] args) {
		String day = "";
		Scanner sc = new Scanner(System.in);
		System.out.println("enter any day ");
		String week = sc.nextLine();
		if (day.equals("monday")) {
			System.out.println(" poha");
			if (day.equals("tuesday")) {
				System.out.println("pavbhaji");
				if (day.equals("wednesday")) {
					System.out.println("biryani");
					if (day.equals("thrusday")) {
						System.out.println("bread omlet");
						if (day.equals("friday")) {
							System.out.println("pulav");
							if (day.equals("saturday")) {
								System.out.println("fish");
							} else {
								System.out.println("dhal_chawal");

							}
						}
					}
				}
			}
		}

	}
}
